# =========================
# SERVER CONFIG
# =========================
MONGO_URI=mongodb+srv://username:password@cluster-url/dbname
PORT=5000

# Secret dùng để ký JWT
JWT_SECRET=your_jwt_secret_here

# =========================
# EMAIL DÙNG CHO AUTH (verify / forgot password)
# utils/sendEmail.js
# =========================
EMAIL_USER=your_gmail_account@gmail.com        # gmail dùng để gửi mail
EMAIL_PASS=your_gmail_app_password_here       # app password 16 ký tự
EMAIL_FROM=your_gmail_account@gmail.com       # địa chỉ hiển thị ở "From"

# =========================
# CLOUDINARY
# =========================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =========================
# EMAIL GỬI KHI TẠO ĐƠN HÀNG
# utils/sendEmailWhenCreateOrder.js
# =========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_EMAIL=your_gmail_account@gmail.com       # thường trùng với EMAIL_USER
SMTP_PASSWORD=your_gmail_app_password_here    # cùng app password ở trên cũng được
FROM_EMAIL=your_gmail_account@gmail.com       # email hiển thị người gửi
FROM_NAME=PHO LINH KIEN                       # tên shop hiển thị người gửi

# =========================
# GOOGLE OAUTH (Đăng nhập Google)
# dùng ở backend
# =========================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
